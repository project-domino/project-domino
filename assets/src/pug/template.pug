doctype html

html
	head
		meta(name="viewport", content="width=device-width, initial-scale=1")
		block head
		script(src="https://use.fontawesome.com/3ca30f4373.js")
		link(rel="stylesheet", href="/assets/header.css")
		link(rel="stylesheet", href="/assets/main.css")
	body
		div.navbar
			h2.logo
				a.navbar-title(href="/") Project Domino
			div.search-container
				input.search-field(placeholder="Search...")
				button.search-btn
					span.fa.fa-search
			div.nav-right-container
				| {{if .loggedIn}}
				| {{if eq .requestUser.Type "writer"}}
				div.dropdown.new-item-dropdown
					span.dropdown-btn.new-item-dropdown-btn.fa.fa-plus
					div.dropdown-content.new-item-dropdown-content
						a(href="/new/note") + Note
						a(href="/new/collection") + Collection
						a(href="/new/textbook") + Textbook
				| {{end}}
				div.dropdown.account-dropdown
					span.dropdown-btn.account-dropdown-btn
						| {{if ne .requestUser.FirstName ""}}
						| 	{{.requestUser.FirstName}}
						| 	{{if ne .requestUser.LastName ""}}
						| 		{{.requestUser.LastName}}
						| 	{{end}}
						| {{else}}
						| 	{{.requestUser.UserName}}
						| {{end}}
					div.dropdown-content.account-dropdown-content
						a(href="/account") My Account
						a.logout-btn Sign Out
				| {{else}}
				btn.sign-in-btn Sign In
				| {{end}}
		block body
		div#modal
			div.container
				div#modal-content
					div#modal-header
						span#modal-close ×
					div#modal-body
					div#modal-footer
		div#alert
			div#alert-content
				span#alert-close ×
				span#alert-text
		script(src="/assets/main.js")
		block scripts
