extends ./template.pug

block head
	title New Note
	link(rel="stylesheet", href="/assets/selectivity.css")
	link(rel="stylesheet", href="/assets/new-note.css")

block body
	div.panel.new-note-container
		h2.panel-heading Create a new note
		h4.field-header Title
		input#new-note-title.form-input(placeholder="Enter note title...")
		h4.field-header Type your note's content below...
		textarea#editor.new-note-editor
		h4.field-header Pick some tags for your note...
		div#tag-selector
		div.panel-footer
			button#new-note-btn.form-btn.new-note-btn Create Note

block scripts
	script(src="/assets/new-note.js")
