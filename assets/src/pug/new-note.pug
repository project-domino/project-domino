extends ./writer-panel.pug

block writer-panel-head
	title New Note
	link(rel="stylesheet", href="/assets/select2.css")
	link(rel="stylesheet", href="//cdn.quilljs.com/0.20.1/quill.snow.css")
	link(rel="stylesheet", href="/assets/new-note.css")

block writer-panel-body
	div.panel.new-note-container
		h2.panel-heading Create a new note
		h4.panel-field-header Title
		input.new-note-title.form-input(placeholder="Enter note title...")
		h4.panel-field-header Type your note's content below...
		div#editor-toolbar.toolbar
			span.ql-format-group
				select.ql-size(title="Size")
					option(value="10px") Small
					option(value="13px", selected="") Normal
					option(value="18px") Large
					option(value="32px") Huge
			span.ql-format-group
				span.ql-format-button.ql-bold(title="Bold")
				span.ql-format-seperator
				span.ql-format-button.ql-italic(title="Italic")
				span.ql-format-seperator
				span.ql-format-button.ql-underline(title="Underline")
				span.ql-format-seperator
				span.ql-format-button.ql-strike(title="Strikethrough")
			span.ql-format-group
				span.ql-format-button.ql-list(title="List")
				span.ql-format-seperator
				span.ql-format-button.ql-bullet(title="Bullet")
			span.ql-format-group
				span.ql-format-button.ql-link(title="Link")
				span.ql-format-button.ql-image(title="Image")
		div#editor.new-note-editor.editor
		h4.panel-field-header Pick some tags for your note...
		div.tag-selector-container
			select.tag-selector(multiple="multiple", style="width: 100%;")
		div.panel-footer
			button.btn.btn-success.publish-note-btn Publish Note
			button.btn.btn-primary.save-draft-btn Save Draft

block scripts
	script(src="//cdn.quilljs.com/0.20.1/quill.js")
	script(src="/assets/new-note.js")
