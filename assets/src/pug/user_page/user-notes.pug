extends ./user.pug

include ../items.pug

block user-body
	+control("notes")
	div.user-items-content
		span.page-number Page {{.currentPage}}
		div.item-list
			| {{range .notes}}
			+noteItem("/note/{{.ID}}/{{toSnakeCase .Title}}", ".")
			| {{end}}
		- var prevLink = "/u/{{.pageUser.UserName}}/notes?items={{.items}}&page={{.prevPage}}"
		- var nextLink = "/u/{{.pageUser.UserName}}/notes?items={{.items}}&page={{.nextPage}}"
		+navLinks(prevLink, nextLink)
