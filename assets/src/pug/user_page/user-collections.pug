extends ./user.pug

include ../items.pug

block user-body
	+control("collections")
	div.pageify-content
		span.page-number Page {{.currentPage}}
		div.item-list.full-width
			| {{range .collections}}
			+collectionItem("/collection/{{.ID}}", "")
			| {{end}}
		- var prevLink = "/u/{{.pageUser.UserName}}/collections?items={{.items}}&page={{.prevPage}}"
		- var nextLink = "/u/{{.pageUser.UserName}}/collections?items={{.items}}&page={{.nextPage}}"
		+navLinks(prevLink, nextLink)
