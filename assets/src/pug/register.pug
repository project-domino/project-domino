extends ./template.pug

block head
	title Register
	link(rel="stylesheet", href="/assets/login.css")

block body
	div.login-panel
		h2.login-header Register
		input#email-field.form-control(placeholder="Enter your email...")
		input#username-field.form-control(placeholder="Choose a username...")
		input#password-field.form-control(placeholder="Choose a password...", type="password")
		input#retype-password-field.form-control(placeholder="Retype your password...", type="password")
		button#register-btn.form-control Register
		span.seperator or...
		a(href="/login") Login

block scripts
	script(src="/assets/register.js")
