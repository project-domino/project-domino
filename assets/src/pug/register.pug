extends ./template.pug

block head
	title Register

block css
	link(rel="stylesheet", href="/assets/login.css")

block body
	div.panel.panel-body.login-panel
		h2 Register
		div.panel-body
			input#email-field.form-input(placeholder="Enter your email...")
			input#username-field.form-input(placeholder="Choose a username...")
			input#password-field.form-input(placeholder="Choose a password...", type="password")
			input#retype-password-field.form-input(placeholder="Retype your password...", type="password")
			button#register-btn.btn.btn-primary Register
			span.seperator or...
			a(href="/login") Login

block scripts
	script(src="/assets/register.js")
